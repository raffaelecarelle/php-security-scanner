{
    "name": "raffaelecarelle/php-security-scanner",
    "description": "A PHP security code analyzer that finds vulnerabilities and suggests fixes",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Security\\CodeAnalyzer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Security\\CodeAnalyzer\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.4",
        "symfony/console": "^5.4",
        "nikic/php-parser": "^4.15",
        "symfony/finder": "^5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.84"
    },
    "bin": [
        "bin/security-analyzer"
    ],
    "scripts": {
        "test": "phpunit",
        "cs": "php-cs-fixer fix --dry-run",
        "cs-fix": "php-cs-fixer fix src"
    }
}
